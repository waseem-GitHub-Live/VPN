        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout23"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout20">

            <ImageView
                android:id="@+id/ic__server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_18sdp"
                android:paddingVertical="@dimen/_9sdp"

                android:src="@drawable/server_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView12000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Services"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintBottom_toTopOf="@+id/textde000"
                app:layout_constraintStart_toEndOf="@+id/ic__server"
                app:layout_constraintTop_toTopOf="@+id/ic__server" />

            <TextView
                android:id="@+id/textde000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/urbanist_semibold_600"
                android:text="Access all services worldwide"
                android:textColor="#BCBCBC"
                app:layout_constraintBottom_toBottomOf="@+id/ic__server"
                app:layout_constraintStart_toStartOf="@+id/textView12000"
                app:layout_constraintTop_toBottomOf="@+id/textView12000" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout21"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:background="@drawable/background_black_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout23">

            <RadioButton
                android:id="@+id/radioP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:buttonTint="@color/selected"
                android:clickable="true"
                android:focusable="true"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_11sdp"
                android:fontFamily="@font/urbanist_semibold_600"
                android:text="1 Month: $5.99/mo"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/radioP"
                app:layout_constraintStart_toEndOf="@+id/radioP"
                app:layout_constraintTop_toTopOf="@+id/radioP" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pre2c"
