            android:layout_height="0dp"

            android:layout_marginHorizontal="@dimen/_14sdp"
            android:background="@drawable/background_black_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.11"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout21">

            <RadioButton
                android:id="@+id/radioP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:buttonTint="@color/selected"
                android:clickable="true"
                android:focusable="true"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:paddingVertical="@dimen/_7sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_11sdp"
                android:text="12 Months: $2.99/mo"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/radioP2"
                app:layout_constraintTop_toTopOf="@+id/radioP2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save 50% per year"
                android:textColor="#8F8F8F"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/radioP2"
                app:layout_constraintStart_toStartOf="@+id/textView22"
                app:layout_constraintTop_toBottomOf="@+id/textView22" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#8F8F8F"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView24"
                app:layout_constraintHeight_percent="0.7"
                android:layout_marginEnd="@dimen/_18sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.001" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/_18sdp"
                android:text="Total:\n$35.99 "
                android:textColor="#8F8F8F"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout22"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:background="@drawable/background_black_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pre2c">

            <RadioButton
                android:id="@+id/radioP3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:buttonTint="@color/selected"
                android:clickable="true"
                android:focusable="true"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_11sdp"
                android:fontFamily="@font/urbanist_semibold_600"
                android:text="Life-Time Purchese: $69.99"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/radioP3"
                app:layout_constraintStart_toEndOf="@+id/radioP3"
                app:layout_constraintTop_toTopOf="@+id/radioP3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_click_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout22"
            app:layout_constraintWidth_percent="0.9">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/urbanist_extrabold_800"
                android:text="Try For FREE"
                android:textColor="#1E1E1E"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
